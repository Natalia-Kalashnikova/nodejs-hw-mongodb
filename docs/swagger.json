  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "auth": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password"
        ],
        "properties": {
          "name": {
            "description": "User's name",
            "type": "string",
            "example": "Nataly"
          },
          "email": {
            "description": "User's email",
            "type": "string",
            "example": "nataliakalashnikova7@gmail.com"
          },
          "password": {
            "description": "User's password",
            "type": "string",
            "example": "1234"
          }
        }
      },
      "contact": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "phoneNumber",
          "email",
          "contactType",
          "userId"
        ],
        "properties": {
          "_id": {
            "description": "Contact's id",
            "type": "string",
            "example": "66cb9bb2347e7e835a7a4c12"
          },
          "name": {
            "description": "Contact's name",
            "type": "string",
            "example": "Karolina Mala"
          },
          "phoneNumber": {
            "description": "Contact's phonenumber",
            "type": "string",
            "example": "+380000000458"
          },
          "email": {
            "description": "Contact's email",
            "type": "string",
